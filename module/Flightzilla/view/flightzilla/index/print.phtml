            <div class="row-fluid">
                <div class="span12">
                    <h5><?php
                        echo sprintf('(%s %s) %s %s',
                            $oTicket->getPriority(),
                            $oTicket->id(),
                            $this->ticketicons($oTicket),
                            $oTicket->title()
                        );
                    ?></h5>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span7">
                    <p><i class="icon-user"></i> <?php echo $oTicket->getAssignee(true); ?></p>
                    <p>
                    <?php if ($oTicket->isContainer() === true): ?>
                        <i class="icon-time"></i> <?php echo $sEstimationString; ?>
                    <?php else: ?>
                        <i class="icon-comment"></i> <?php echo $oTicket->getReporter(true); ?>
                    <?php endif; ?>
                    </p>
                </div>
                <div class="span5">
                    <p>Expected: <?php echo $this->finishstatus($oTicket, \Flightzilla\View\Helper\Finishstatus::ENDDATE); ?></p>
